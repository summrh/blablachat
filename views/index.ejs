<html lang="en">
<head>
<title><%= title %></title>
<link rel="stylesheet" href="/client.css"/>
</head>

<body>
<b>Server: </b><%= server %>
<br/>
<div id="user" hidden><b>User: </b> <label></label> <a href="javascript:logout()" style='color:blue;text-decoration: underline'> Log out</a></div>

<div id="ask" class="bordered" style="display: none;">
    E-mail:<br>
    <input type="text" id="email"/><br>
    Password:<br>
    <input type="password" id="password"/><br>
    <br>
    <a href="#"><span class="join">Join!</span></a>
</div>
<div id="channel" class="bordered" style="display: none;">

    <div id="msgs">
        <h4>Server: <%= server %></h4>

        <ul>
            <li class="message" style="display: none">
                <span class="user"></span><span class="message"></span>
                <span class="time"></span>
            </li>
            <li class="control" style="display: none">
                <span class="user"></span>&nbsp;<span class="message"></span>
                <span class="time"></span>
            </li>
        </ul>
    </div>
    <div id="input">
        <form><input type="text" id="message"/></form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script>const socketIoUrl = '<%= socketIoUrl %>';</script>
<script src="/client.js"></script>

</body>
</html>
